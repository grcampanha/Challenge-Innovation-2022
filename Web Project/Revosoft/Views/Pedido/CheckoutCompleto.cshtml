@model Pedido
<body id="body">
<div class="container">

    <div class="jumbotron">
            <h2 class="confirm">@ViewBag.CheckoutCompletoMensagem</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>User : <strong>@Model.Nome</strong>
            <p>Date :  <strong>@Model.PedidoEnviado</strong>
            <p>ID Order   : <strong>@Model.PedidoId</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                        @foreach (var item in Model.PedidoItens)
                        {
                    <tr>
                        <td class="items-compra">@item.Quantidade</td>
                        <td class="items-compra">@item.store.Produto</td>
                        <td class="items-compra">$@item.store.Preco</td>
                    </tr>
                        }
            </table>

            <h4>Value: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align :center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Return</a>
    </h3>
</div>
</body>